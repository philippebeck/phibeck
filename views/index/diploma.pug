section#diploma
  .container.text-center

    //- Diploma title
    .row
      .col-md-offset-4.col-md-4.col-sm-offset-3.col-sm-6.col-xs-offset-2.col-xs-8
        .well.well-sm
          h2 Parcours
          hr.star-primary
          br

    .row
      .col-md-offset-2.col-md-8.col-sm-offset-1.col-sm-10.col-xs-12

        //- Carousel
        #carousel.carousel.slide(data-ride="carousel")

          //- Indicators
          ol.carousel-indicators
            li.active(data-target="#carousel" data-slide-to="0")
            li(data-target="#carousel" data-slide-to="1")
            li(data-target="#carousel" data-slide-to="2")
            li(data-target="#carousel" data-slide-to="3")
            li(data-target="#carousel" data-slide-to="4")
            li(data-target="#carousel" data-slide-to="5")

          //- Wrapper for slides
          .carousel-inner(role="listbox")

            //- Node certificate
            .item.active
              a.thumbnail(target="_blank" href="https://openclassrooms.com/learning-path-certificates/3258888279" title="Cliquez pour accéder à l'original en ligne")
                img.img-responsive(src="images/diploma/certificat_philippe-beck_deployez-vos-applications-node-js-sur-le-cloud-d-ibm-bluemix.jpg" alt="Certificat de Réussite Philippe Beck Déployez vos applications Node.js sur le Cloud d’IBM Bluemix")

            //- Symfony certificate
            .item
              a.thumbnail(target="_blank" href="https://openclassrooms.com/learning-path-certificates/8731315173" title="Cliquez pour accéder à l'original en ligne")
                img.img-responsive(src="images/diploma/certificat_philippe-beck_developpeur-web-php-symfony.jpg" alt="Certificat de Réussite Philippe Beck Développeur Web PHP / Symfony")

            //- PHP certificate
            .item
              a.thumbnail(target="_blank" href="https://openclassrooms.com/learning-path-certificates/9291993677" title="Cliquez pour accéder à l'original en ligne")
                img.img-responsive(src="images/diploma/certificat_philippe-beck_developpez-des-sites-php-professionnels.jpg" alt="Certificat de Réussite Philippe Beck Développez des sites PHP professionnels")

            //- Java certificate
            .item
              a.thumbnail(target="_blank" href="https://openclassrooms.com/learning-path-certificates/1660110749" title="Cliquez pour accéder à l'original en ligne")
                img.img-responsive(src="images/diploma/certificat_philippe-beck_devenez-incollable-en-java.jpg" alt="Certificat de Réussite Philippe Beck Devenez incollable en Java")

            //- Integration certificate
            .item
              a.thumbnail(target="_blank" href="https://openclassrooms.com/learning-path-certificates/95052421" title="Cliquez pour accéder à l'original en ligne")
                img.img-responsive(src="images/diploma/certificat_philippe-beck_integrateur-web.jpg" alt="Certificat de Réussite Philippe Beck Intégrateur Web")

            //- Website certificate
            .item
              a.thumbnail(target="_blank" href="https://openclassrooms.com/learning-path-certificates/38026473" title="Cliquez pour accéder à l'original en ligne")
                img.img-responsive(src="images/diploma/certificat_philippe-beck_lancer-son-propre-site-web.jpg" alt="Certificat de Réussite Philippe Beck Lancer son propre site Web")

          //- Controls
          a.left.carousel-control(href="#carousel" role="button" data-slide="prev")
            span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
            span.sr-only  Précédent

          a.right.carousel-control(href="#carousel" role="button" data-slide="next")
            span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
            span.sr-only  Suivant
