//- Project modal
#plan.modal.fade(tabindex="-1" role="dialog" aria-hidden="true")
  .modal-content
    .close-modal(data-dismiss="modal")
      .lr
        .rl

    //- Project part
    .container-fluid
      .row
        .col-lg-12
          .modal-body

            //- Project title
            h3 Projet
            hr.icons-fa
            .row

              //- Project specifications course
              .col-md-4.col-sm-6
                figure
                  a(data-placement="top" data-toggle="tooltip" href="https://openclassrooms.com/course-certificates/5160146863" target="_blank" title="Accès au certificat original")
                    img.img-responsive(src="images/courses/plan/realisez-le-cahier-des-charges-d-un-projet-digital.jpg" alt="Certificat de Cours - Philippe Beck - Réalisez le cahier des charges d'un projet digital")
                  figcaption
                    a(data-placement="bottom" data-toggle="tooltip" href="https://openclassrooms.com/courses/decouvrez-les-bases-de-la-gestion-de-projet" target="_blank" title="Accès au cours") Découvrez les bases de la gestion de projet

              //- Project frame course
              .col-md-4.col-sm-6
                figure
                  a(data-placement="top" data-toggle="tooltip" href="https://openclassrooms.com/course-certificates/7189192696" target="_blank" title="Accès au certificat original")
                    img.img-responsive(src="images/courses/plan/apprenez-a-bien-cadrer-un-projet-multimedia.jpg" alt="Certificat de Cours - Philippe Beck - Apprenez à bien cadrer un projet multimédia")
                  figcaption
                    a(data-placement="bottom" data-toggle="tooltip" href="https://openclassrooms.com/courses/apprenez-a-bien-cadrer-un-projet-multimedia" target="_blank" title="Accès au cours") Apprenez à bien cadrer un projet multimédia

              //- Project base course
              .col-md-offset-0.col-md-4.col-sm-offset-3.col-sm-6
                figure
                  a(data-placement="top" data-toggle="tooltip" href="https://openclassrooms.com/course-certificates/5033047040" target="_blank" title="Accès au certificat original")
                    img.img-responsive(src="images/courses/plan/decouvrez-les-bases-de-la-gestion-de-projet.jpg" alt="Certificat de Cours - Philippe Beck - Découvrez les bases de la gestion de projet")
                  figcaption
                    a(data-placement="bottom" data-toggle="tooltip" href="https://openclassrooms.com/courses/realisez-le-cahier-des-charges-d-un-projet-digital" target="_blank" title="Accès au cours") Réalisez le cahier des charges d'un projet digital

            //- Close button
            button.btn.btn-primary.btn-lg(data-dismiss="modal" data-placement="top" data-toggle="tooltip" title="Retour à la page d'accueil" type="button")
              span.fa.fa-times  Fermer
