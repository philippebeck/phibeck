  /*** VARIABLES ***/

/* BackGrounds */
$bg-main = fixed
$bg-secondary = 100% 0% no-repeat

/* Main BackGrounds */
$bg-d1 = url("../images/backgrounds/bg-d1.jpg") $bg-main 50% 50%
$bg-d2 = url("../images/backgrounds/bg-d2.jpg") $bg-main 50% 50%
$bg-d3 = url("../images/backgrounds/bg-d3.jpg") $bg-main 50% 100%

/* Secondary BackGrounds */
$bg-p1 = url("../images/backgrounds/bg-p1.svg") $bg-secondary
$bg-p2 = url("../images/backgrounds/bg-p2.svg") $bg-secondary
$bg-p3 = url("../images/backgrounds/bg-p3.svg") $bg-secondary
$bg-p4 = url("../images/backgrounds/bg-p4.svg") $bg-secondary

/* Fonts */
$main-font = 'Arima Madurai', Helvetica, sans-serif
$title-font = 'Philosopher', Georgia, serif

/* Colors */
$main-color = #122B40
$second-color = #2E6DA4
$linkedin = #0077B5
$github = #24292E
$freecodecamp = #006400
$stackoverflow = #F48024

/* Borders */
$dashed = dashed 2px
$double = double 5px
$solid = solid 2px

/* Shadow */
$box-shadow = 5px 5px 20px black

/* Animation */
$linear = 5s linear
