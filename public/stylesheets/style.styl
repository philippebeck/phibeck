/*** GLOBAL ***/

body
  font-family 'Arima Madurai', 'Helvetica Neue', Helvetica, Arial, sans-serif

section
  padding 30px 0

.row
  margin 20px 0

h1
h2
h3
h4
h5
h6
  font-family "Philosopher", "Helvetica Neue", Helvetica, Arial, sans-serif
  margin 0

h2
  text-transform uppercase

h3
  font-size 1.5em

.icons-fa
  border 2px solid #2c3e50
  max-width 250px

.icons-fa:after
  background white
  color #2c3e50
  font-family FontAwesome
  content "\f005"
  position relative
  top -0.8em
  font-size 2em
  padding 0 0.25em

a
a:hover
a:focus
a:active
  color #337ab7

button
.well
  background white
  border 2px solid #2c3e50
  box-shadow 5px 5px 5px black

.btn-outline
  font-size 20px
  box-shadow 5px 5px 5px black
  transition all 0.3s ease-in-out
  margin-top 20px

.btn-outline
.btn-outline:focus
.btn-primary:hover
.btn-primary:active
  background white
  border 2px solid #337ab7
  color #2c3e50

.btn-primary
.btn-primary:focus
.btn-outline:hover
.btn-outline:active
  background #337ab7
  border 2px solid #2c3e50
  color white

.scroll-top
  position fixed
  right 10px
  bottom 10px
  width 50px
  height 50px
  z-index 1049

.scroll-top .btn
  font-size 20px
  width 50px
  height 50px
  border-radius 100%
  line-height 35px

/*** HEADER PART ***/

.navbar-custom
  background #2c3e50
  border none
  font-family "Philosopher", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight 700
  text-transform uppercase

.navbar-custom .navbar-brand
.navbar-custom .navbar-brand:focus
.navbar-custom .navbar-nav li a:hover
  color #337ab7

.navbar-custom .navbar-brand:hover
.navbar-custom .navbar-brand:active
.navbar-custom .navbar-nav li a
.navbar-custom .navbar-nav li a:focus
.navbar-custom .navbar-nav li a:active
  color white

.navbar-nav
  letter-spacing 1px

.navbar-custom .navbar-nav li.active a
.navbar-custom .navbar-nav li.active a:hover
.navbar-custom .navbar-nav li.active a:focus
.navbar-custom .navbar-nav li.active a:active
  background #337ab7
  color white

.navbar-custom .navbar-toggle
.navbar-custom .navbar-toggle:focus
  background white
  border 2px solid #337ab7
  color #2c3e50
  font-size 10px
  letter-spacing 1px
  text-transform uppercase

.navbar-custom .navbar-toggle:hover
  background #337ab7
  border 2px solid #2c3e50
  color white

@media (min-width 768px)
  .navbar-custom
    padding 20px 0
    -webkit-transition padding 0.3s
    -moz-transition padding 0.3s
    transition padding 0.3s

  .navbar-brand
    font-size 1.5em
    -webkit-transition all 0.3s
    -moz-transition all 0.3s
    transition all 0.3s

  .navbar-custom.affix
    padding 1px 0 2px 0

  .navbar-custom.affix .navbar-brand
    font-size 1.2em

/*** HOME PART ***/

#home
  text-align center
  background-image url("../images/background/bg-home.jpg")

#home .container
  padding-top 80px

#home img
  margin auto

/*** CERTIFICATE PART ***/

#certificate .icons-fa:after
  content "\f0a3"

.certificate-item
  margin 0 0 20px

.certificate-link
  display block
  position relative

.search-container
  background #2fc3a6
  position absolute
  width 100%
  height 100%
  opacity 0
  transition all ease 0.5s
  -webkit-transition all ease 0.5s
  -moz-transition all ease 0.5s

.search-container:hover
  opacity 0.8

.search-icon
  position absolute
  width 100%
  height 20px
  font-size 20px
  text-align center
  top 50%
  margin-top -30px
  color white

/*** MODAL PART ***/

.modal-content
  padding 80px 0
  opacity 0.9
  text-align center

.modal-content h3
  margin 0
  font-size 2.5em

.modal-content img
  margin 20px

.close-modal
  position absolute
  width 75px
  height 75px
  background transparent
  top 10px
  right 10px
  cursor pointer

.close-modal:hover
  opacity 0.3

.lr
  height 75px
  width 1px
  margin-left 35px
  background #2c3e50
  transform rotate(45deg)
  -ms-transform rotate(45deg)
  /* IE 9 */
  -webkit-transform rotate(45deg)
  /* Safari and Chrome */
  z-index 1051

.rl
  height 75px
  width 1px
  background #2c3e50
  transform rotate(90deg)
  -ms-transform rotate(90deg)
  /* IE 9 */
  -webkit-transform rotate(90deg)
  /* Safari and Chrome */
  z-index 1052

/*** DIPLOMA PART ***/

#diploma
  background-image url("../images/background/bg-diploma.jpg")

#diploma .icons-fa:after
  content "\f091"

.carousel-indicators li
  border 1px solid #2c3e50

.carousel-indicators .active
  background-color #2c3e50

.glyphicon-chevron-left
.glyphicon-chevron-right
  color #2c3e50

/*** DEGREE PART ***/

#degree .icons-fa:after
  content "\f19d"

.panel-title
  font-size 1.5em

table
  margin 10px 0

/*** CONTACT PART ***/

#contact
  background-image url("../images/background/bg-contact.jpg")

#contact .icons-fa:after
  content "\f0e0"

.label-form-group input
.label-form-group textarea
  z-index 1
  position relative
  padding -10px
  border none
  border-radius 0
  font-size 1.2em
  background none
  box-shadow none !important
  margin -10px 0

.label-form-group label
  display block
  z-index 0
  position relative
  top 1em
  margin 0
  font-size 0.8em
  line-height 1em
  opacity 0
  -webkit-transition top 0.3s ease,opacity 0.3s ease
  -moz-transition top 0.3s ease,opacity 0.3s ease
  -ms-transition top 0.3s ease,opacity 0.3s ease
  transition top 0.3s ease,opacity 0.3s ease

.label-form-group:not(:first-child)
  padding-left 14px
  border-left 1px solid #eeeeee

.label-form-group-with-value label
  top 0
  opacity 1

.label-form-group-with-focus label
  color #337ab7

/*** FOOTER PART ***/

.footer-top
  background-color #2c3e50
  color white

.btn-social
  height 50px
  width 50px
  border-radius 100%
  text-align center
  font-size 20px
  line-height 45px

.footer-bottom
  background-color #233140
