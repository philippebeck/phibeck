/*** COURSES PART ***/

.modal-content
  opacity 0.9
  padding 80px 0
  text-align center

.modal-content h3
  font-size 2.5em
  margin 0

.modal-content figure
  margin 30px 0

/* Close modal */

.close-modal
  background-color transparent
  cursor pointer
  height 75px
  position absolute
  top 10px
  right 10px
  width 75px

.close-modal:hover
  opacity 0.3

.lr
.rl
  background-color $main-color
  height 75px
  width 1px

.lr
  margin-left 35px
  transform rotate(45deg)
  -ms-transform rotate(45deg)
  /* IE 9 */
  -webkit-transform rotate(45deg)
  /* Safari and Chrome */
  z-index 1051

.rl
  transform rotate(90deg)
  -ms-transform rotate(90deg)
  /* IE 9 */
  -webkit-transform rotate(90deg)
  /* Safari and Chrome */
  z-index 1052
