/*** PATHS PART ***/

/* Section */
#paths
  background $bg-d3

/* Title */
#paths .icons-fa:after
  content "\f018"

/* Carousel */
#carousel
  margin 0 15px

/* Indicators */
.carousel-indicators li
  border $solid $second-color

.carousel-indicators .active
  background-color $second-color

/* Captions & Arrows */
.carousel-caption
.glyphicon-chevron-left
.glyphicon-chevron-right
  color $second-color
