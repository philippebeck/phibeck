/*** PROJECT PART ***/

/* Section */
#projects
  border-top $dashed $main-color
  /* border-bottom $dashed $main-color */

/* Title */
#projects .icons-fa:after
  content "\f0e8"

/* Accordion */
#accordion
  border $double $main-color
  box-shadow $box-shadow

/* Sub-titles */
.panel-title
  font-size 18px

/* Tables */
table
  border $solid $second-color
  box-shadow $box-shadow

/* Presentations */
#projects p
  background rgba(255, 255, 255, 0.6)
  border $solid $second-color
  box-shadow $box-shadow
  font-size 14px
  margin 20px 0
  padding 10px

/* Cells */
th
  font-size 13px

td
  font-size 12px

/** Desktop effects **/
@media (min-width: 768px)
  .panel-title
    font-size 20px

  #projects p
    font-size 16px

  th
    font-size 15px

  td
    font-size 14px
