/*** CONTACT PART ***/

/* Section */
#contact
  background $bg-d3

/* Title */
#contact .icons-fa:after
  content "\f0e0"

/* Fields */
.label-form-group input
.label-form-group textarea
  background none
  border none
  box-shadow none !important
  font-size 18px
  margin -10px 0
  padding -10px
  position relative
  bottom 10px
  z-index 1

.well-contact
  border $double $main-color
  margin 0 30px 30px 30px
  -webkit-animation little-opacity $linear 5s infinite
  -moz-animation little-opacity $linear 5s infinite
  -o-animation little-opacity $linear 5s infinite
  animation little-opacity $linear 5s infinite

/* Form animation */
@keyframes little-opacity
  0%
    opacity 1
  50%
    opacity 0.7
  100%
    opacity 1

/* Labels */
.label-form-group label
  display block
  font-size 12px
  line-height 20px
  opacity 0
  position relative
  top 10px
  -webkit-transition top 0.3s ease,opacity 0.3s ease
  -moz-transition top 0.3s ease,opacity 0.3s ease
  -ms-transition top 0.3s ease,opacity 0.3s ease
  transition top 0.3s ease,opacity 0.3s ease
  z-index 0

.label-form-group-with-value label
  opacity 1
  top 0

.label-form-group-with-focus label
  color $second-color

#submit
  -webkit-animation move-submit $linear 5s infinite
  -moz-animation move-submit $linear 5s infinite
  -o-animation move-submit $linear 5s infinite
  animation move-submit $linear 5s infinite

/* Button animation */
@keyframes move-submit
  0%
    transform translate(0, 0)
  50%
    transform translate(-50px, 0)
  100%
    transform translate(0, 0)
